@{
}
@model Student;
<h1 class="display-6">Create A New Student</h1>
<form asp-action="AddStudent" asp-controller="Student" method="post">
    <div class="row">
        <div class="form-group col">
            <label asp-for="StudentId">Student Id</label>
            <input class="form-control" asp-for="StudentId">
        </div>
    
        <div class="form-group col">
            <label asp-for="StudentFirstName">First Name</label>
            <input class="form-control" asp-for="StudentFirstName">
        </div>
    
        <div class="form-group col">
            <label asp-for="StudentLastName">Last Name</label>
            <input class="form-control" asp-for="StudentLastName">
        </div>
    </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input class="form-control" asp-for="Email">
        </div>
    <div class="row">
        <div class="form-group col">
            <label asp-for="DateEnrolled">Date Enrolled</label>
            <input class="form-control" asp-for="DateEnrolled">
        </div>
        <div class="form-group col">
            <label asp-for="StudentCourse">Student Course</label>
                <select class="form-control form-select" asp-items="@Html.GetEnumSelectList(typeof(Course))" aria-describedby="CourseHelp" placeholder="Select Student Course" asp-for="StudentCourse">
                </select>
        </div>
    
        <div class="form-group col">
            <label asp-for="GPA">GPA</label>
            <input class="form-control" asp-for="GPA">
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Submit</button>
</form>