@model RegisterViewModel
<h1 class="display-6">Register</h1>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Register" asp-controller="Account">
    
    <div class="row g-2">
        <div class="form-floating mb-3 col-md">
            <input asp-for="Username" class="form-control" placeholder="">
            <label asp-for="Username"></label>
        </div>
        <div class="form-floating col-md">
            <input asp-for="Password" class="form-control" placeholder="">
            <label asp-for="Password"></label>
        </div>
   
        <div class="form-floating col-md">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="">
            <label asp-for="ConfirmPassword"></label>
        </div>
    </div>
    <div class="row g-2">
        <div class="form-floating mb-3 col-md">
            <input asp-for="FirstName" class="form-control" placeholder="">
            <label asp-for="FirstName"></label>
        </div>
        <div class="form-floating col-md">
            <input asp-for="LastName" class="form-control" placeholder="">
            <label asp-for="LastName"></label>
        </div>
    </div>
    <div class="row g-2">
        <div class="form-floating mb-3 col-md">
            <input asp-for="Email" class="form-control" placeholder="">
            <label asp-for="Email"></label>
        </div>
        <div class="form-floating col-md">
            <input asp-for="PhoneNumber" class="form-control" placeholder="">
            <label asp-for="PhoneNumber"></label>
        </div>
    </div>
    <input type="submit" value="Submit" class="btn btn-success" />
</form>