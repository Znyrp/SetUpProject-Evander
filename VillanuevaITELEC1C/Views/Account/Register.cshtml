@model RegisterViewModel

<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Register" asp-controller="Account">
    
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" placeholder="Enter email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else .</small>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Password">
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" placeholder="Password">
    </div>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" placeholder="Password">
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" placeholder="Password">
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Password">
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" placeholder="Password">
    </div>
    <input type="submit" value="Submit" class="btn btn-success" />
</form>