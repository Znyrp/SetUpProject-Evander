@model LoginViewModel
<h1 class="display-6">Login</h1>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Login" asp-controller="Account">
    <div class="row g-2">
        <div class="form-floating mb-3 col-md">
            <input asp-for="UserName" class="form-control" placeholder="" >
            <label asp-for="UserName"></label>
        </div>
        <div class="form-floating col-md">
            <input asp-for="Password" class="form-control" placeholder="">
            <label asp-for="Password"></label>
        </div>
    </div>
        <div class="row mb-3">
            <div class="col-sm-5">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe">
                    </label>
                </div>
            </div>
        </div>
    <input type="submit" value="Submit" class="btn btn-success" />  
</form>