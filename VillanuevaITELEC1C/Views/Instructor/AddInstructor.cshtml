@{
}
@model Instructor;
<h1 class="display-6">Create A New Instructor</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AddInstructor" asp-controller="Instructor" method="post">
    <div class="row">
   

        <div class="form-group col-md-6">
            <label asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName">
        </div>

        <div class="form-group col-md-6">
            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName">
        </div>
    </div>
    <div class="row">
        <div class="form-group col">
            <label asp-for="Rank"></label>
            <select class="form-control form-select" asp-items="@Html.GetEnumSelectList(typeof(Rank))" aria-describedby="CourseHelp" placeholder="Select Rank" asp-for="Rank">
            </select>
        </div>

        <div class="form-group col">
            <label asp-for="HiringDate"></label>
            <input class="form-control" asp-for="HiringDate">
        </div>

        <div class="form-group col">
            <label asp-for="OfficePhone"></label>
            <input class="form-control" asp-for="OfficePhone">
        </div>
    </div>
    <br />
        <div class="form-check form-switch">
            <label asp-for="IsTenured"></label>
            <input class="form-check-input" type="checkbox" role="switch" asp-for="IsTenured" value="true">
        </div>
    <br />
    <button type="submit" class="btn btn-success">Submit</button>
    <button type="button" class="btn btn-secondary" onclick="history.back()">Cancel</button>
</form>