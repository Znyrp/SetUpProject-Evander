@{
}
@model Instructor;
<h1 class="display-6">Create A New Instructor</h1>
<form asp-action="AddInstructor" asp-controller="Instructor" method="post">
    <div class="row">
        <div class="form-group col-md-2">
            <label asp-for="Id">Id</label>
            <input class="form-control" asp-for="Id">
        </div>
   
        <div class="form-group col-md-5">
            <label asp-for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName">
        </div>

        <div class="form-group col-md-5">
            <label asp-for="LastName">Last Name</label>
            <input class="form-control" asp-for="LastName">
        </div>
    </div>
    <div class="row">
        <div class="form-group col">
            <label asp-for="Rank">Rank</label>
            <select class="form-control form-select" asp-items="@Html.GetEnumSelectList(typeof(Rank))" aria-describedby="CourseHelp" placeholder="Select Rank" asp-for="Rank">
            </select>
        </div>

        <div class="form-group col">
            <label asp-for="HiringDate">Hiring Date</label>
            <input class="form-control" asp-for="HiringDate">
        </div>
    </div>
    <br />
        <div class="form-check form-switch">
            <label asp-for="IsTenured">Is Tenured</label>
            <input class="form-check-input" type="checkbox" role="switch" asp-for="IsTenured" value="true">
        </div>
    <br />
    <button type="submit" class="btn btn-success">Submit</button>
</form>