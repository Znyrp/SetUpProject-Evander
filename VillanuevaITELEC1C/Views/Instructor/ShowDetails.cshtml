@model Instructor;
@{
   
        string status = "";
        if (Model.IsTenured)
        {
            status = "Permanent";
        }
        else if (Model.IsTenured == false)
        {
            status = "Probationary";
        }

}


<h4 class="display-6">Instructor Details</h4>

<table class="table table-bordered border-dark">
    <tr>
        <th class="table-success table-bordered border-dark">Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th class="table-success table-bordered border-dark">First Name</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th class="table-success table-bordered border-dark">Last Name</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th class="table-success table-bordered border-dark">Is Tenured</th>
        <td>@Model.IsTenured</td>
    </tr>
    <tr>
        <th class="table-success table-bordered border-dark">Status</th>
        <td>@status</td>
    </tr>
    <tr>
        <th class="table-success table-bordered border-dark">Rank</th>
        <td>@Model.Rank</td>
    </tr>
    <tr>
        <th class="table-success table-bordered border-dark">Hiring Date</th>
        <td>@Model.HiringDate</td>
    </tr>
</table>
